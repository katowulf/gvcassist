{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "echo 'Use `npm run build:dev` or `npm run build:prod`'",
    "build:dev": "vue-cli-service build --mode development",
    "build:prod": "vue-cli-service build --mode production",
    "lint": "vue-cli-service lint --fix",
    "format": "prettier --write **/*.ts",
    "pretest": "tsc",
    "test": "firebase emulators:exec --only firestore 'mocha --timeout 10000'",
    "test:emu": "firebase emulators:start --only firestore",
    "test:mocha": "mocha --timeout 10000"
  },
  "mocha": {
    "ui": "mocha-typescript",
    "recursive": "test",
    "require": "source-map-support/register"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "firebase": "^7.13.1",
    "moment": "^2.24.0",
    "v-emoji-picker": "^2.1.7",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.2",
    "vue-clipboard2": "^0.3.1",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.5",
    "vuetify": "^2.2.11"
  },
  "devDependencies": {
    "@firebase/testing": "^0.18.2",
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-plugin-router": "~4.2.0",
    "@vue/cli-plugin-typescript": "~4.2.0",
    "@vue/cli-service": "~5.0.8",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.1",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.1.2",
    "mocha": "^7.1.1",
    "mocha-typescript": "^1.1.17",
    "prettier": "^1.19.1",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.1",
    "typescript": "~3.7.5",
    "vue-cli-plugin-vuetify": "~2.0.5",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0"
  },
  "prettier": {
    "disableLanguages": [
      "html"
    ],
    "jsxBracketSameLine": true,
    "htmlWhitespaceSensitivity": "ignore",
    "tabWidth": 2
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "vue/no-unused-components": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
